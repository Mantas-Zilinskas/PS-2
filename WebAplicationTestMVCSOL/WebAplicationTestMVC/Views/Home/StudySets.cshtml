@using WebAplicationTestMVC.Utilities
@model WebAplicationTestMVC.Models.StudySet
@{
    if (Model.studySetName == null)
    {
        Model.studySetName = "All flashcards.xlsx";
    }
    List<Flashcard> flashcards = ExcelHelper.getExcelData(@"Data/" + Model.studySetName);
}
<!DOCTYPE html>
<html manifest="cache.manifest">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Study set</title>
    <link href="static/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .question-text {
            font-size: 28px
        }
    </style>
</head>
<body>
    <h2>
       SetName: @Model.studySetName.Substring(0, Model.studySetName.Length - 5)
    </h2>

    <hr class="soften" />
    
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="AddFlashcard" asp-route-studySetName="@Model.studySetName">Create flashcards manually</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Flashcards" asp-route-studySetName="@Model.studySetName">Learn flashcards</a>

    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="ImportDB">  <label for="file">Upload flashcards:</label><input type="file" name="file" id="file" required accept=".xlsx" /><button type="submit" class="btn btn-primary">Import flashcards</button> </form>
    


    <br>
    <h3>@Model.studySetName.Substring(0, Model.studySetName.Length - 5) Contains:</h3>
    <div class="row">
        @foreach (var flashcard in flashcards)
        {
            <div class="col-sm-1 card">Question:   </div>
            <div class="col-sm-11 card">@flashcard.question</div>
        }
    </div>
</body>
</html>
